{
  "name": "wow-guild-sync",
  "version": "1.0.0",
  "description": "Simple WoW guild synchronization app - just configure your region, server, and guild name",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "docker:build": "docker build -t poolparty/guild-sync .",
    "docker:run": "docker run --env-file .env poolparty/guild-sync",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f",
    "health": "node src/health-check.js"
  },
  "keywords": [
    "wow",
    "guild",
    "sync",
    "raiderio",
    "blizzard",
    "api"
  ],
  "author": "WoW Guild Sync",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "node-cron": "^4.2.1",
    "prisma": "^6.14.0",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": ">=22.18.0"
  }
}
